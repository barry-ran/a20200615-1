<block s-if="{{$imgurl}}"><view><view class="forum_scroll"><view class="{{['forum_scroll_view',flag==0?'forum_scroll_view_on':'']}}" data-flag="0" data-event-opts="{{[['tap',[['getlist',['$event']]]]]}}" bindtap="__e">全部</view><view class="{{['forum_scroll_view',flag==1?'forum_scroll_view_on':'']}}" data-flag="1" data-event-opts="{{[['tap',[['getlist',['$event']]]]]}}" bindtap="__e">好评</view><view class="{{['forum_scroll_view',flag==2?'forum_scroll_view_on':'']}}" data-flag="2" data-event-opts="{{[['tap',[['getlist',['$event']]]]]}}" bindtap="__e">中评</view><view class="{{['forum_scroll_view',flag==3?'forum_scroll_view_on':'']}}" data-flag="3" data-event-opts="{{[['tap',[['getlist',['$event']]]]]}}" bindtap="__e">差评</view></view><view style="height:86rpx;"></view><block s-for="{{list}}" s-for-item="item" s-for-index="index" s-key="index"><view class="list" data-id="{{item.id}}" data-event-opts="{{[['tap',[['goevaluatecon',['$event']]]]]}}" bindtap="__e"><view class="top"><image class="avatar" src="{{item.anonymous==0?item.avatar:$imgurl+'avatar.png'}}"></image><view><view class="nickname">{{item.anonymous==0?item.nickname:"匿名用户"}}</view><view class="time">{{item.creattime}}</view></view><view style="flex:1;"></view><view style="color:#ff610b;font-size:28rpx;">{{item.assess==1?"好评":item.assess==2?"中评":"差评"}}</view></view><view class="content" style="margin-top:20rpx;">{{''+item.content+''}}</view><view class="imgs"><block s-for="{{item.imgs}}" s-for-item="img" s-for-index="isub" s-key="isub"><block><image style="width:130rpx;height:130rpx;margin-right:8rpx;" mode="aspectFill" src="{{img}}"></image></block></block></view><block s-if="{{item.append_content}}"><block><view style="height:2rpx;background:#eee;margin-top:20rpx;"></view><view style="font-size:28rpx;color:#ff610b;padding:20rpx 0;">{{"用户"+(item.append_days>0?item.append_days+"天后":"当天")+"追评"}}</view><view class="content">{{''+item.append_content+''}}</view><block s-if="{{item.append_imgs.length>0}}"><view class="imgs"><block s-for="{{item.append_imgs}}" s-for-item="imgitem" s-for-index="isub" s-key="isub"><block><image style="width:130rpx;height:130rpx;margin-right:8rpx;" mode="aspectFill" src="{{imgitem}}"></image></block></block></view></block></block></block><view data-event-opts="{{[['tap',[['',['$event']]]]]}}" class="bottom" catchtap="__e"><view style="color:#838383;font-size:22rpx;">浏览<label style="font-family:Arial, Helvetica, sans-serif;" class="_span">{{item.hits}}</label>次</view><view style="flex:1;"></view><view class="func" data-id="{{item.id}}" data-event-opts="{{[['tap',[['addLikes',['$event']]]]]}}" bindtap="__e"><view class="{{['iconfont',item.addlikes==2?'icon-c-praise':'icon-x-zan2']}}" style="{{'color:'+(item.addlikes==2?'':'#ff610b')+';'}}"></view><view style="display:inline-block;margin-right:8rpx;">{{item.likes>0?item.likes:"点赞"}}</view></view></view></view></block><block s-if="{{list_length==0}}"><block><image class="pageno_address" src="{{$imgurl+'no_comment.png'}}"></image><view style="text-align:center;color:#666;">还没有相关评论哟~</view></block></block><myfooter vue-id="1" page_signs="{{page_signs}}" baseinfo="{{baseinfo}}"></myfooter></view></block>