<block s-if="{{$imgurl}}"><view class="_div"><view class="evaluate_box"><view class="evaluate_head hbj"><image class="evaluate_head_left" src="{{info.anonymous==0?info.avatar:$imgurl+'avatar.png'}}" mode="aspectFill"></image><view class="evaluate_head_center"><view class="evaluate_head_name text-hide">{{info.anonymous==0?info.nickname:"匿名用户"}}</view><view class="evaluate_head_time">{{info.creattime}}</view></view><view class="evaluate_head_right"><block s-if="{{info.assess==1}}"><block>好评</block></block><block s-if="{{info.assess==2}}"><block>中评</block></block><block s-if="{{info.assess==3}}"><block>差评</block></block></view></view><view class="evaluate_class hbj"><view class="evaluate_class_right">浏览<text>{{info.hits}}</text>次</view></view><view class="evaluate_text">{{info.content}}</view><block s-if="{{info.imgs}}"><view class="evaluate_img"><block s-for="{{info.imgs}}" s-for-item="item" s-for-index="index" s-key="index"><image src="{{item}}" mode="widthFix"></image></block></view></block><block s-if="{{info.append_content}}"><block><view style="height:2rpx;background:#eee;"></view><view style="font-size:28rpx;color:#ff610b;padding:20rpx 0;">{{"用户"+(info.append_days>0?info.append_days+"天后":"当天")+"追评"}}</view><view class="content">{{''+info.append_content+''}}</view><block s-if="{{info.append_imgs.length>0}}"><view class="imgs"><block s-for="{{info.append_imgs}}" s-for-item="imgitem" s-for-index="isub" s-key="isub"><block><image style="width:130rpx;height:130rpx;margin-right:8rpx;" src="{{imgitem}}"></image></block></block></view></block></block></block></view><view class="delimiter"></view><view class="evaluate_business"><text class="iconfont icon-c-pinglun"></text>商家回复</view><block s-if="{{info.reply_first!=null}}"><view style="padding:30rpx;"><view class="evaluate_head hbj"><image class="evaluate_head_left" src="{{$imgurl+'storeavatar.png'}}" mode="aspectFill"></image><view class="evaluate_center"><view class="evaluate_head_name text-hide">商家首次回复</view><view class="evaluate_head_time">{{info.reply_first_time}}</view></view><view class="flex1"></view><view class="evaluate_zan hbj"><view class="evaluate_zan_right"></view></view></view><view class="evaluate_business_content">{{info.reply_first}}</view><block s-if="{{info.reply_second!=null}}"><block><view class="evaluate_head hbj"><image class="evaluate_head_left" src="{{$imgurl+'storeavatar.png'}}" mode="aspectFill"></image><view class="evaluate_center"><view class="evaluate_head_name text-hide">商家二次回复</view><view class="evaluate_head_time">{{info.reply_second_time}}</view></view><view class="flex1"></view><view class="evaluate_zan hbj"><view class="evaluate_zan_right"></view></view></view><view class="evaluate_business_content">{{info.reply_second}}</view></block></block></view></block><block s-else><block><view style="padding:30rpx;box-sizing:border-box;">暂无商家回复</view></block></block><view class="bottom_reserve"></view><view class="{{['evaluate_bottom hbj',evaluate==1?'evaluate_bottom1':'evaluate_bottom2']}}"><block s-if="{{evaluate==2}}"><view data-event-opts="{{[['tap',[['addevaluate',['$event']]]]]}}" bindtap="__e"><text class="iconfont icon-c-bianji"></text>追评</view></block><view data-id="{{info.id}}" data-event-opts="{{[['tap',[['addLikes',['$event']]]]]}}" bindtap="__e"><text class="{{['iconfont',info.addlikes==2?'icon-c-praise':'icon-x-zan2']}}" style="{{'color:'+(info.addlikes==2?'':'#ff610b')+';'}}"></text>{{''+(info.likes>0?info.likes:"点赞")+''}}</view></view></view></block>